{
  "editor.fontFamily": "'Bitstream Vera Sans Mono', 'monospace', monospace",
    "editor.fontSize": 13,
    "git.openRepositoryInParentFolders": "never",
    "[dart]": {
        "editor.formatOnSave": true,
    },
    "[python]": {
        "editor.formatOnSave": true,
    },
    "[java]": {
        "editor.formatOnSave": true,
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnPaste": true
    },
    "editor.minimap.enabled": false,
    "workbench.tree.indent": 20,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.config/Code/User/vscodevimrc.vim",
    "vim.leader": ",",
    "vim.normalModeKeyBindings": [
        {
          "before": ["<leader>", "<space>"],
          "commands": ["editor.action.commentLine"],
          "when": "editorTextFocus && !editorReadonly"
        }
    ],
    "vim.visualModeKeyBindings": [
        {
          "before": ["<leader>", "<space>"],
          "commands": ["editor.action.commentLine"],
          "when": "editorTextFocus && !editorReadonly"
        }
    ],
    "vim.handleKeys": {
      "<C-p>": false
    },
    "workbench.colorTheme": "Visual Studio Light - C++",
    "debug.onTaskErrors": "abort",
    "latex-workshop.latex.external.build.command": "make",
    "latex-workshop.latex.autoBuild.run": "never",
    "cSpell.language": "en,de-DE",
    "cSpell.userWords": [
      "Rehde"
    ],
    "editor.wordWrap": "on",
    "editor.lineNumbers": "relative",
    "explorer.confirmDragAndDrop": false,
    "redhat.telemetry.enabled": false,
    "explorer.confirmDelete": false
}
