include ../main

# normal mode
map w exec 'sh -ic "~/.local/bin/zathura-mode.sh \"$FILE\" zathura normal"'
map j scroll down
map k scroll up
map J navigate next
map K navigate previous
map Down scroll down
map Up scroll up

# fullscreen mode
map [fullscreen] w exec 'sh -ic "~/.local/bin/zathura-mode.sh \"$FILE\" zathura fullscreen"'
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map [fullscreen] J navigate next
map [fullscreen] K navigate previous
map [fullscreen] Down scroll down
map [fullscreen] Up scroll up
